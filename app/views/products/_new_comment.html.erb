<div class="container">
<% if signed_in? %>
  <h4>Add a review: </h4>
  <%= form_for([@product,@product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %> <br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </p>

    <p>
      <div class="rating"></div>
    </p>

    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
</div>

